type Satoshi = nat64;

type InitPayload = record {
  bitcoin_canister_id : principal;
};

type OutPoint = record {
  txid : blob;
  vout : nat32
};

type Utxo = record {
  outpoint: OutPoint;
  value: Satoshi;
  height: nat32;
  confirmations: nat32;
};

type BTCCanisterInfo = record {
  btc_address : text;
  utxos : vec Utxo;
  balance : Satoshi;
  txid : text;
  update_txid : text;
};

service: (InitPayload) -> {
}
